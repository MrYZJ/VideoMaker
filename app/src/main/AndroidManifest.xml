<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wtz.videomaker">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MultiSurfaceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".SingleSurfaceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".AudioRecordActivity"/>
        <activity
            android:name=".MixAudioActivity"/>
        <activity
            android:name=".CameraActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".VideoRecordActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".VideoPushActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".ImageVideoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".utils.FileChooser"/>
        <activity
            android:name=".utils.ImageChooser"/>
    </application>

</manifest>